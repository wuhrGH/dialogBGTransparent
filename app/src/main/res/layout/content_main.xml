<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wuhr.com.dialogbgtransparent.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog" />
    <Button
        android:id="@+id/alertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertDialog"
        android:textAllCaps="false"
        />
    <Button
    android:id="@+id/dialogFragment"
    android:layout_below="@+id/alertDialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="dialogFragment "
    android:textAllCaps="false"
    />


    <Button
        android:id="@+id/customAlertDialog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialogFragment"
        android:layout_height="wrap_content"
        android:text="自定义 alertDialog"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/customdialogFragment"
        android:layout_width="wrap_content"
        android:layout_below="@+id/customAlertDialog"
        android:layout_height="wrap_content"
        android:text="自定义 dialogFragment"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/sigleDilog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/customdialogFragment"
        android:layout_height="wrap_content"
        android:text="单选Dialog"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/multDilog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/sigleDilog"
        android:layout_height="wrap_content"
        android:text="复选Dialog"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/dialogFragmentEvent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/multDilog"
        android:layout_height="wrap_content"
        android:text="dialogFragment事件回传到Activity"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/dialogFragmentLayout"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialogFragmentEvent"
        android:layout_height="wrap_content"
        android:text="dialogFragment不同屏幕大小显示不同样式"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialogFragmentLayout"
        android:layout_height="wrap_content"
        android:text="时间选择器"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_height="wrap_content"
        android:text="日期选择器"
        android:textAllCaps="false"
        />
</RelativeLayout>
